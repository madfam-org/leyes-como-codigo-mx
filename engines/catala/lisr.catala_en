      $12140.13 + (monthly_income - $151176.20) * 0.1600
    else if monthly_income >= $175735.67 and monthly_income <= $210403.69 then
      $16069.64 + (monthly_income - $175735.67) * 0.1792
    else if monthly_income >= $210403.70 and monthly_income <= $424353.97 then
      $22282.14 + (monthly_income - $210403.70) * 0.2136
    else if monthly_income >= $424353.98 and monthly_income <= $668840.14 then
      $67981.92 + (monthly_income - $424353.98) * 0.2352
